<Window x:Class="IS_Bolnice.PacijentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IS_Bolnice"
        mc:Ignorable="d"
        Title="Osnovni prozor" Height="600" Width="570"
        WindowStartupLocation="CenterScreen">

    <Border Padding ="10" Background="#eee">
        <StackPanel Background="#fff">
            <!--Meni-->
            <Menu Width="Auto" Height="45" Background="Gray">
                <MenuItem Header="Uredi" FontSize="20" Padding="5"/>
            </Menu>
            <!--ToolBar-->
            <ToolBar Height="50">

            </ToolBar>
            <!--Korisnik-->
            <TextBlock
                    Height="25"
                    FontSize ="20"
                    FontStyle="Italic"
                    Text="Korisnik"
                    Padding="10 0"/>
            <!--Prostor za ime, prezime i jmbg-->
            <TextBox 
                x:Name="imeKorisnika"
                Height="40"
                IsReadOnly="True"
                Text="Bojan Lupulov 12345"
                Background="#eee"
                Padding ="0 2"
                Margin ="5 0"
                FontSize="20"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--Dugmad leva strana-->
                <Grid Grid.Column="0"  Width="250">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <!--Zakazi termin-->
                    <Button
                    x:Name="zakaziBtn"
                    FontSize="16"
                    Content="Zakaži termin"
                    Grid.Row="0"
                    Margin="10"
                    Height="70" Click="zakaziBtn_Click"/>
                    <!--Prikaz termina pregleda-->
                    <Button
                    x:Name="prikaziBtn"
                    FontSize="16"
                    Content="Prikaz termina pregleda"
                    Grid.Row="1"
                    Margin="10"
                    Height="70" Click="prikaziBtn_Click"/>
                    <!--Oceni lekara-->
                    <Button
                    x:Name="anketaBtn"
                    FontSize="16"
                    Content="Anketa"
                    Grid.Row="2"
                    Margin="10"
                    Height="70" Click="anketaBtn_Click"/>
                </Grid>

                <!--Dogmad desna strana-->
                <Grid Grid.Column="1" Width="250">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <!--Prikaz obavestenja-->
                    <Button
                        x:Name="obavestenjaBtn"
                        FontSize="16"
                        Content="Prikaz obavestenja"
                        Margin="10"
                        Height="70"/>
                    <!--Prikaz operacija-->
                    <Button Grid.Row="1"
                        x:Name="operacijeBtn"
                        FontSize="16"
                        Content="Prikaz termina operacija"
                        Margin="10"
                        Height="70"/>
                    <!--Odjava-->
                    <Button Grid.Row="2"
                    x:Name="odjavaBtn"
                        FontSize="16"
                        Content="Odjavi se"
                        Margin="10"
                        Height="70" Click="odjavaBtn_Click"/>
                </Grid>
                <!--Slika-->
            </Grid>
        </StackPanel>
    </Border>
</Window>
