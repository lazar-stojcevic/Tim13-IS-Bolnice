<Window x:Class="IS_Bolnice.Prozori.Prikaz_za_upravnika.EditSastojakWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IS_Bolnice.Prozori.Prikaz_za_upravnika"
        mc:Ignorable="d"
        Title="EditSastojakWindow" Height="250" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Naziv sastojka:" FontFamily="Verdana" FontSize="26" HorizontalAlignment="Left" Height="47" Margin="8,41,0,0" VerticalAlignment="Top" Width="210"/>
        <TextBox x:Name="id_txt" FontFamily="Verdana" FontSize="26" HorizontalAlignment="Left" Height="40" Margin="227,45,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="239"/>
        <Button x:Name="Izmeni_btn" FontFamily="Verdana" FontWeight="Bold" Background="#78909C" FontSize="30" Content="Izmeni" HorizontalAlignment="Left" Height="50" Margin="20,130,0,0" VerticalAlignment="Top" Width="179" Click="Izmeni_btn_Click"/>
        <Button x:Name="Odustani_btn" FontFamily="Verdana" FontWeight="Bold" Background="#78909C" FontSize="30" Content="Odustani" HorizontalAlignment="Left" Height="50" Margin="263,130,0,0" VerticalAlignment="Top" Width="184" Click="Odustani_btn_Click"/>

    </Grid>
</Window>
